{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "insertPragma": false,
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["*.json", "*rc"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.html", "*.xml"],
      "options": {
        "tabWidth": 2,
        "printWidth": 120
      }
    },
    {
      "files": "*.source.html",
      "options": {
        "tabWidth": 2,
        "printWidth": 200
      }
    }
  ]
}
